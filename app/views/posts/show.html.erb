<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= social_share_button_tag(@post.title) %>

<% @comments.each do |comment| %>
<br>
<%= comment.user.email %>
<%= comment.content %>
<% end %>

<%= render 'comments/form', comment: @comment%>
